{
    "window.commandCenter": true,
    "workbench.colorTheme": "One Dark Pro Darker",
    "oneDarkPro.editorTheme": "One Dark Pro Darker",
    "diffEditor.hideUnchangedRegions.enabled": true,
    "editor.fontFamily": "'0xProto Nerd Font Mono', 'Droid Sans Mono', 'monospace', 'Droid Sans Fallback'",
    "editor.fontLigatures": true,
    "oneDarkPro.vivid": true,
    "editor.fontSize": 16,
    "editor.tokenColorCustomizations": {
        "[*Dark*]": {   
            "textMateRules": [
                {
                    "scope": "ref.matchtext",
                    "settings": {
                        "foreground": "#fff"
                    }
                },
                {
                    "scope": [
                        "comment",
                        "punctuation.definition.comment"
                    ],
                    "settings": {
                        "foreground": "#d19a66ff", // #50FA70,#79a802c6, #808C78, 00937D
                        "fontStyle": "italic bold"
                    }
                }
            ]
        }
    },  
    "workbench.settings.applyToAllProfiles": [
        "editor.fontVariations"
    ],
    "gitlens.mode.active": "review",
    "go.toolsManagement.autoUpdate": true,
}